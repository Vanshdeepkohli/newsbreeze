<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allNewsFragment">

    <fragment
        android:id="@+id/allNewsFragment"
        android:name="com.example.newsbreeze.fragments.AllNewsFragment"
        android:label="fragment_all_news"
        tools:layout="@layout/fragment_all_news" >
        <action
            android:id="@+id/action_allNewsFragment_to_fullNewsFragment2"
            app:destination="@id/fullNewsFragment" />
        <action
            android:id="@+id/action_allNewsFragment_to_savedNewsFragment"
            app:destination="@id/savedNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullNewsFragment"
        android:name="com.example.newsbreeze.fragments.FullNewsFragment"
        android:label="fragment_full_news"
        tools:layout="@layout/fragment_full_news" >
        <argument
            android:name="article"
            app:argType="com.example.newsbreeze.data.Article" />
        <action
            android:id="@+id/action_fullNewsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <action
            android:id="@+id/action_fullNewsFragment_to_savedNewsFragment"
            app:destination="@id/savedNewsFragment" />
        <action
            android:id="@+id/action_fullNewsFragment_to_allNewsFragment"
            app:destination="@id/allNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.example.newsbreeze.fragments.SavedNewsFragment"
        android:label="fragment_saved_news"
        tools:layout="@layout/fragment_saved_news" >
        <action
            android:id="@+id/action_savedNewsFragment_to_fullNewsFragment"
            app:destination="@id/fullNewsFragment" />
        <action
            android:id="@+id/action_savedNewsFragment_to_allNewsFragment"
            app:destination="@id/allNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.newsbreeze.fragments.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view" >
        <action
            android:id="@+id/action_webViewFragment_to_fullNewsFragment"
            app:destination="@id/fullNewsFragment" />
    </fragment>
</navigation>